<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.assignment.ptmsassignment"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />
    	<uses-permission android:name="android.permission.CALL_PHONE" />
    	<uses-permission android:name="android.permission.INTERNET"/>
    	<uses-permission android:name="android.permission.CAMERA"/>
    	<uses-feature android:name="android.hardware.camera.autofocus"></uses-feature>
    	<uses-feature android:name="android.hardware.camera"></uses-feature>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:uiOptions="splitActionBarWhenNarrow" >
        <activity
            android:name="com.assignment.ptmsassignment.LoginActivity"
            android:label="@string/app_name"
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.assignment.ptmsassignment.MainActivity"
            android:label="@string/app_name"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name="com.assignment.ptmsassignment.JobDetailsActivity"
            android:label="@string/jobDetails"
            android:uiOptions="splitActionBarWhenNarrow"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
        <activity
            android:name="com.assignment.ptmsassignment.CameraActivity"
            android:label="@string/takePhoto"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name="com.assignment.ptmsassignment.PhotoViewActivity"
            android:label="@string/takePhoto"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
    </application>

</manifest>
