<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCE0E0"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#545454"
        android:paddingLeft="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/updateStatus_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/updateStatus_t"
            android:textColor="#fff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/updateStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HH:mm:ss dd/MM/yyyy"
            android:textColor="#fff"
            android:textSize="12dp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
    		android:paddingLeft="@dimen/activity_horizontal_margin"
    		android:paddingRight="@dimen/activity_horizontal_margin"
    		android:paddingTop="10dp" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="5sp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/jobStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:text="jobStatus"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/jobBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/jobBackground"
                        android:textColor="#009292"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#DCE0E0" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/staffNo_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/jobNo"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/newPassword_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/staffNo_t"
                        android:text="@string/serialNo"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/oldPassword_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/newPassword_t"
                        android:text="@string/jobProblem"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/remark_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/oldPassword"
                        android:layout_marginTop="1dp"
                        android:text="@string/remark"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/requestDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/requestDate_t"
                        android:layout_toEndOf="@+id/requestDate_t"
                        android:text="dd/MM/yyyy"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/requestDate_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="48dp"
                        android:layout_marginStart="48dp"
                        android:layout_toRightOf="@+id/jobStartTime_t"
                        android:layout_toEndOf="@+id/jobStartTime_t"
                        android:text="@string/requestDate"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/staffNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/newPassword_t"
                        android:layout_marginLeft="17dp"
                        android:layout_marginStart="17dp"
                        android:layout_toEndOf="@+id/staffNo_t"
                        android:layout_toRightOf="@+id/staffNo_t"
                        android:text="000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/serialNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/oldPassword_t"
                        android:layout_alignLeft="@+id/staffNo"
                        android:layout_alignStart="@+id/staffNo"
                        android:text="00000000000 "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/serialNo"
                        android:layout_alignStart="@+id/serialNo"
                        android:layout_alignTop="@+id/remark_t"
                        android:text="remark"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/visitDate_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/remark"
                        android:text="@string/visitDate"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/jobStartTime_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/visitDate_t"
                        android:text="@string/jobStartTime"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/jobEndTime_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignLeft="@+id/requestDate_t"
                        android:layout_alignStart="@+id/requestDate_t"
                        android:text="@string/jobEndTime"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/jobStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/jobStartTime_t"
                        android:layout_toEndOf="@+id/jobStartTime_t"
                        android:text="HH:mm"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/jobEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/jobEndTime_t"
                        android:layout_toEndOf="@+id/jobEndTime_t"
                        android:text="HH:mm"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/oldPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/oldPassword_t"
                        android:layout_alignBottom="@+id/oldPassword_t"
                        android:layout_alignLeft="@+id/serialNo"
                        android:text="Problem"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/visitDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/visitDate_t"
                        android:layout_alignLeft="@+id/remark"
                        android:text="dd/MM/yyyy"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="5sp" >

                <TextView
                    android:id="@+id/clientInformation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clientInformation"
                    android:textColor="#009292"
                    android:textSize="16sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#DCE0E0" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/companyNo_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/companyNo"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/companyName_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/companyNo_t"
                        android:text="@string/companyName"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/companyAddress_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/companyName_t"
                        android:text="@string/companyAddress"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/comAddr"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/contact"
                            android:textColor="#009090"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="#DCE0E0" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="10dp" >

                            <TextView
                                android:id="@+id/companyTel_t"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="16dp"
                                android:layout_weight="1"
                                android:text="@string/companyTel"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/comTel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="24dp"
                                android:layout_toRightOf="@+id/companyTel_t"
                                android:layout_weight="1"
                                android:text="99999999"
                                android:textSize="12sp" />

                            <ImageButton
                                android:id="@+id/call"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="25dp"
                                android:layout_weight="0.5"
                                android:background="@color/white"
                                android:onClick="callCompany"
                                android:scaleType="fitCenter"
                                android:src="@drawable/call_2" />

                        </RelativeLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/comNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/comAddr"
                        android:layout_alignParentTop="true"
                        android:text="0000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/comName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/comAddr"
                        android:layout_alignTop="@+id/companyName_t"
                        android:text="Name"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/comAddr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/comName"
                        android:layout_toRightOf="@+id/companyAddress_t"
                        android:text="Address"
                        android:textSize="12sp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="5sp" >

                <TextView
                    android:id="@+id/purchasedProductInformation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/purchasedProductInformation"
                    android:textColor="#009292"
                    android:textSize="16sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#DCE0E0" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/productNo_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/productNo"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/purchaseDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:text="dd/MM/yyyy"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/purchaseDate_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/purchaseDate"
                        android:text="@string/purchaseDate"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/prodName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/productName_t"
                        android:text="Name"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/productName_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/productNo_t"
                        android:text="@string/productName"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/prodNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/prodName"
                        android:layout_alignParentTop="true"
                        android:text="AA0000"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:padding="5sp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gallery"
                    android:textColor="#009292"
                    android:textSize="16sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#DCE0E0" />

                <Gallery
                    android:id="@+id/gallery1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>